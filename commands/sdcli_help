echo '      integration # run integration tests'
echo '      coverage # generate a coverage report'
echo '  repo'
echo '      all # generic repo tools'
echo '          add-dac # add a DAC package'
echo '          add-micros # add a Micros descriptor'
echo '          add-oss # add license and contributing files'
echo '          add-pipelines # add pipelines configuration'
echo '          audit-contract # verify the repo implements the contract'
echo '      go # go repo tools'
echo '          add-docker # add a Dockerfile'
echo '          add-layout # render the standard layout'
echo '          add-lint # add linter configuration'
echo '          create # generate a full go project'
